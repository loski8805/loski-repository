<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
	
	<!-- Alias 설정 (별칭) -->
	<typeAliases>
		<typeAlias alias="board" type="com.shop.model.BoardVO"/>
		<typeAlias alias="user" type="com.shop.model.UserVO"/>
	</typeAliases>
	
	<!-- Sql Mapper 설정 (Sql명령어들이 저장 된 SQL파일들을 등록할 수 있음)-->
	<mappers>
		<mapper resource="mappings/board-mapping.xml"/>
		<mapper resource="mappings/user-mapping.xml"/>
	</mappers>
	
</configuration>